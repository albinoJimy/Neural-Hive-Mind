{
  "type": "record",
  "name": "CodeForgeArtifact",
  "namespace": "com.neuralhivemind.execution.codeforge",
  "doc": "Represents an artifact generated by the Code Forge neural code generation pipeline",
  "fields": [
    {
      "name": "artifact_id",
      "type": "string",
      "doc": "Unique identifier for the artifact (UUID)"
    },
    {
      "name": "ticket_id",
      "type": "string",
      "doc": "Reference to the Execution Ticket that originated this artifact"
    },
    {
      "name": "plan_id",
      "type": "string",
      "doc": "Reference to the Cognitive Plan ID for full traceability"
    },
    {
      "name": "intent_id",
      "type": "string",
      "doc": "Reference to the Intent ID for full traceability"
    },
    {
      "name": "decision_id",
      "type": "string",
      "doc": "Reference to the Decision ID for full traceability"
    },
    {
      "name": "correlation_id",
      "type": ["null", "string"],
      "default": null,
      "doc": "Correlation ID for distributed tracing"
    },
    {
      "name": "trace_id",
      "type": ["null", "string"],
      "default": null,
      "doc": "OpenTelemetry trace ID"
    },
    {
      "name": "span_id",
      "type": ["null", "string"],
      "default": null,
      "doc": "OpenTelemetry span ID"
    },
    {
      "name": "artifact_type",
      "type": {
        "type": "enum",
        "name": "ArtifactType",
        "symbols": [
          "CODE",
          "IAC",
          "TEST",
          "POLICY",
          "DOCUMENTATION",
          "CONTAINER",
          "CHART",
          "FUNCTION"
        ]
      },
      "doc": "Type of artifact generated"
    },
    {
      "name": "language",
      "type": ["null", "string"],
      "default": null,
      "doc": "Programming language or framework (e.g., python, go, terraform, helm)"
    },
    {
      "name": "template_id",
      "type": ["null", "string"],
      "default": null,
      "doc": "Template used as base for generation"
    },
    {
      "name": "confidence_score",
      "type": "double",
      "doc": "Confidence in the generation quality (0.0-1.0)"
    },
    {
      "name": "generation_method",
      "type": {
        "type": "enum",
        "name": "GenerationMethod",
        "symbols": [
          "TEMPLATE",
          "HEURISTIC",
          "LLM",
          "HYBRID"
        ]
      },
      "doc": "Method used for artifact generation"
    },
    {
      "name": "content_uri",
      "type": "string",
      "doc": "URI of the artifact content (S3, OCI registry, Git repository)"
    },
    {
      "name": "content_hash",
      "type": "string",
      "doc": "SHA-256 hash of the artifact content"
    },
    {
      "name": "sbom_uri",
      "type": ["null", "string"],
      "default": null,
      "doc": "URI of the Software Bill of Materials (SBOM) if generated"
    },
    {
      "name": "signature",
      "type": ["null", "string"],
      "default": null,
      "doc": "Sigstore/Notary signature of the artifact"
    },
    {
      "name": "validation_results",
      "type": {
        "type": "array",
        "items": "com.neuralhivemind.execution.codeforge.ValidationResult"
      },
      "default": [],
      "doc": "Results of SAST/DAST/test validations"
    },
    {
      "name": "metadata",
      "type": {
        "type": "map",
        "values": "string"
      },
      "default": {},
      "doc": "Additional metadata key-value pairs"
    },
    {
      "name": "created_at",
      "type": {
        "type": "long",
        "logicalType": "timestamp-millis"
      },
      "doc": "Timestamp when the artifact was created"
    },
    {
      "name": "schema_version",
      "type": "int",
      "default": 1,
      "doc": "Schema version for evolution compatibility"
    }
  ]
}
