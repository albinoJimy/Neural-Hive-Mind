{
  "dashboard": {
    "title": "Orchestrator OPA Policy Enforcement & Security Compliance",
    "tags": ["orchestrator", "opa", "policy", "security", "compliance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "OPA Validation Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(orchestration_opa_validations_total[5m]))",
            "legendFormat": "Validations/s"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Rejection Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(orchestration_opa_policy_rejections_total[5m]) / rate(orchestration_opa_validations_total[5m])",
            "legendFormat": "Rejection Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.05, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Validation Latency P95",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(orchestration_opa_validation_duration_seconds_bucket[5m])) by (le, policy_name))",
            "legendFormat": "{{policy_name}} P95"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(orchestration_opa_validation_duration_seconds_bucket[5m])) by (le, policy_name))",
            "legendFormat": "{{policy_name}} P50"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Latency"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 4,
        "title": "Validations by Policy",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(orchestration_opa_validations_total[5m])) by (policy_name, result)",
            "legendFormat": "{{policy_name}} - {{result}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Validations/s"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 5,
        "title": "Top Policy Rejections",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (rule, policy_name, severity) (rate(orchestration_opa_policy_rejections_total[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 6,
        "title": "Feature Flags Status",
        "type": "table",
        "targets": [
          {
            "expr": "orchestration_opa_feature_flags",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 7,
        "title": "OPA Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(orchestration_opa_evaluation_errors_total[5m])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/s"}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 8,
        "title": "Cache Hit Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(orchestration_opa_cache_hits_total[5m]) / (rate(orchestration_opa_validations_total[5m]) + rate(orchestration_opa_cache_hits_total[5m]))",
            "legendFormat": "Cache Hit Rate"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Hit Rate", "min": 0, "max": 1}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 9,
        "title": "Circuit Breaker State",
        "type": "stat",
        "targets": [
          {
            "expr": "orchestration_opa_circuit_breaker_state{circuit_name=\"opa_client\"}",
            "legendFormat": "State",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 0, "text": "CLOSED", "color": "green"},
              {"value": 1, "text": "HALF_OPEN", "color": "yellow"},
              {"value": 2, "text": "OPEN", "color": "red"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 2, "color": "red"}
              ]
            },
            "unit": "none"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value_and_name"
        },
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 26}
      },
      {
        "id": 10,
        "title": "Circuit Breaker Failure Count",
        "type": "graph",
        "targets": [
          {
            "expr": "orchestration_opa_evaluation_errors_total",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Failures"}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 6, "y": 26}
      },
      {
        "id": 11,
        "title": "Security Violations by Type",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(orchestration_security_violations_total[5m])) by (violation_type, severity)",
            "legendFormat": "{{violation_type}} ({{severity}})"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Violations/s"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 12,
        "title": "Authentication Failures",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(orchestration_security_authentication_failures_total[5m]))",
            "legendFormat": "Auth Failures/s"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.1, "color": "yellow"},
                {"value": 1, "color": "red"}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 32}
      },
      {
        "id": 13,
        "title": "Authorization Denials by Tenant",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (tenant_id, user_id, capability) (rate(orchestration_security_authorization_denials_total[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40}
      },
      {
        "id": 14,
        "title": "Tenant Isolation Violations",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(orchestration_security_tenant_isolation_violations_total[5m])) by (source_tenant, target_tenant)",
            "legendFormat": "{{source_tenant}} \u2192 {{target_tenant}}"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Violations/s"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"type": "gt", "params": [0]},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"}
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "Tenant Isolation Violation Alert",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40}
      },
      {
        "id": 15,
        "title": "Data Governance Compliance",
        "type": "gauge",
        "targets": [
          {
            "expr": "1 - (sum(rate(orchestration_security_data_governance_violations_total[5m])) / sum(rate(orchestration_opa_validations_total{policy_name=\"security_constraints\"}[5m])))",
            "legendFormat": "Compliance Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.95, "color": "yellow"},
                {"value": 0.99, "color": "green"}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 48}
      },
      {
        "id": 16,
        "title": "Rate Limit Exceeded by Tenant",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (tenant_id, limit_type) (rate(orchestration_security_rate_limit_exceeded_total[5m])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 6, "y": 48}
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "annotations": {
      "list": [
        {
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=\"TenantIsolationViolation\"}",
          "iconColor": "red",
          "name": "Security Alerts",
          "tagKeys": "tenant_id,violation_type"
        }
      ]
    }
  }
}
