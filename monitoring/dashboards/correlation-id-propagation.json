{
  "dashboard": {
    "id": null,
    "uid": "correlation-id-propagation",
    "title": "Correlation ID Propagation",
    "tags": ["observability", "tracing", "correlation-id", "neural-hive"],
    "timezone": "browser",
    "schemaVersion": 38,
    "refresh": "30s",
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Correlation ID Missing Rate by Component",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "rate(neural_hive_gateway_correlation_id_missing_total[5m])",
            "legendFormat": "Gateway"
          },
          {
            "expr": "sum by (format) (rate(neural_hive_ste_correlation_id_missing_total[5m]))",
            "legendFormat": "STE ({{format}})"
          },
          {
            "expr": "rate(neural_hive_consensus_correlation_id_missing_total[5m])",
            "legendFormat": "Consensus Engine"
          },
          {
            "expr": "rate(neural_hive_orchestrator_correlation_id_missing_total[5m])",
            "legendFormat": "Orchestrator"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "palette-classic"},
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"]}
        }
      },
      {
        "id": 2,
        "title": "Consensus Engine UUID Generation Rate",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "rate(neural_hive_consensus_correlation_id_generated_total[5m])",
            "legendFormat": "UUID Fallback Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": {"mode": "fixed", "fixedColor": "red"},
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            }
          }
        },
        "options": {
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["mean", "max", "last"]}
        }
      },
      {
        "id": 3,
        "title": "Correlation ID Format Distribution (STE)",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "sum by (format) (neural_hive_ste_correlation_id_missing_total)",
            "legendFormat": "{{format}}"
          }
        ],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]},
          "pieType": "pie"
        }
      },
      {
        "id": 4,
        "title": "Total correlation_id Ausente por Componente",
        "type": "stat",
        "gridPos": {"h": 4, "w": 16, "x": 8, "y": 8},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "sum(neural_hive_gateway_correlation_id_missing_total)",
            "legendFormat": "Gateway"
          },
          {
            "expr": "sum(neural_hive_ste_correlation_id_missing_total)",
            "legendFormat": "STE"
          },
          {
            "expr": "sum(neural_hive_consensus_correlation_id_missing_total)",
            "legendFormat": "Consensus"
          },
          {
            "expr": "sum(neural_hive_orchestrator_correlation_id_missing_total)",
            "legendFormat": "Orchestrator"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 1000}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "horizontal"
        }
      },
      {
        "id": 5,
        "title": "Total UUID Gerados (Consensus Fallback)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 16, "x": 8, "y": 12},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "sum(neural_hive_consensus_correlation_id_generated_total)",
            "legendFormat": "Total UUID Gerados"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        }
      },
      {
        "id": 6,
        "title": "Propagação de correlation_id - Taxa de Sucesso",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "1 - (rate(neural_hive_consensus_correlation_id_generated_total[1h]) / (rate(neural_hive_consensus_decisions_total[1h]) + 0.0001))",
            "legendFormat": "Taxa de Sucesso"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.9},
                {"color": "green", "value": 0.99}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 7,
        "title": "correlation_id Missing por Source (Gateway)",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "targets": [
          {
            "expr": "sum by (source) (neural_hive_gateway_correlation_id_missing_total)",
            "legendFormat": "{{source}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 200}
              ]
            }
          }
        },
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal"
        }
      },
      {
        "id": 8,
        "title": "Alertas Ativos - Correlation ID",
        "type": "alertlist",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "datasource": {"type": "prometheus", "uid": "prometheus"},
        "options": {
          "alertName": "CorrelationId",
          "dashboardAlerts": false,
          "groupBy": [],
          "maxItems": 10,
          "sortOrder": 1,
          "stateFilter": {
            "alerting": true,
            "firing": true,
            "pending": true,
            "noData": false,
            "normal": false
          }
        }
      }
    ],
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
