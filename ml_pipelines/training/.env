# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow.mlflow:5000

# MongoDB Configuration (opcional)
MONGODB_URI=mongodb://mongodb.data-layer:27017
MONGODB_DB=neural_hive

# Training Configuration
MODEL_TYPE=gradient_boosting
HYPERPARAMETER_TUNING=false
PROMOTE_IF_BETTER=true
ALLOW_SYNTHETIC_FALLBACK=true

# Dataset Configuration
DATASET_DIR=/data/training
TRAINING_DATASET_PATH=/data/training/specialist_{specialist_type}_base.parquet

# Feedback Configuration
FEEDBACK_WINDOW_DAYS=30
MIN_FEEDBACK_QUALITY=0.5
