# Execution Ticket Service - Environment Variables Example

# Geral
SERVICE_NAME=execution-ticket-service
ENVIRONMENT=development
LOG_LEVEL=INFO

# PostgreSQL (Primary Store)
POSTGRES_HOST=postgresql
POSTGRES_PORT=5432
POSTGRES_DATABASE=neural_hive_tickets
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10
POSTGRES_SSL_MODE=require

# MongoDB (Audit Trail)
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=neural_hive_orchestration
MONGODB_COLLECTION_TICKETS=execution_tickets
MONGODB_COLLECTION_AUDIT=ticket_audit_log

# Kafka Consumer
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=execution-ticket-service
KAFKA_TICKETS_TOPIC=execution.tickets
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# JWT Tokens
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRATION_SECONDS=3600
JWT_ISSUER=neural-hive-mind
JWT_AUDIENCE=worker-agents

# Webhooks
WEBHOOK_ENABLED=true
WEBHOOK_TIMEOUT_SECONDS=10
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_BACKOFF_SECONDS=2
WEBHOOK_BATCH_SIZE=10
WEBHOOK_WORKER_COUNT=5

# gRPC Server
GRPC_PORT=50052
GRPC_MAX_WORKERS=10
GRPC_MAX_CONCURRENT_RPCS=100

# Observabilidade
OTEL_EXPORTER_ENDPOINT=http://otel-collector:4317
PROMETHEUS_PORT=9090
JAEGER_SAMPLING_RATE=0.1

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_JWT_TOKENS=true
ENABLE_AUDIT_TRAIL=true
ENABLE_STATUS_UPDATES=true
