# Worker Agents Integration Test Configuration
# Copy this file to .env.integration and configure as needed

# ==============================================
# Test Mode Configuration
# ==============================================
# mock: Use mocked services only (no external dependencies)
# real: Use real services (requires running instances)
# hybrid: Use real services where available, mock otherwise
INTEGRATION_TEST_MODE=mock

# Test timeouts
TEST_TIMEOUT_SECONDS=300
PYTEST_TIMEOUT=300

# ==============================================
# Code Forge Configuration
# ==============================================
CODE_FORGE_URL=http://localhost:8000
CODE_FORGE_ENABLED=true
CODE_FORGE_TIMEOUT_SECONDS=60

# ==============================================
# ArgoCD Configuration
# ==============================================
ARGOCD_URL=http://localhost:8081
ARGOCD_TOKEN=
ARGOCD_ENABLED=false
# Note: Generate token with: argocd account generate-token

# ==============================================
# OPA Configuration
# ==============================================
OPA_URL=http://localhost:8181
OPA_ENABLED=true

# ==============================================
# Trivy Configuration
# ==============================================
TRIVY_ENABLED=true
TRIVY_TIMEOUT_SECONDS=120

# ==============================================
# GitHub Actions Configuration
# ==============================================
GITHUB_TOKEN=
GITHUB_ACTIONS_ENABLED=false
GITHUB_API_URL=https://api.github.com
GITHUB_ACTIONS_TIMEOUT_SECONDS=300
# For real integration tests
GITHUB_TEST_REPO=
GITHUB_TEST_WORKFLOW=test.yml

# ==============================================
# SonarQube Configuration
# ==============================================
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=
SONARQUBE_ENABLED=false
SONARQUBE_TIMEOUT_SECONDS=300

# ==============================================
# Snyk Configuration
# ==============================================
SNYK_TOKEN=
SNYK_ENABLED=false

# ==============================================
# Checkov Configuration
# ==============================================
CHECKOV_ENABLED=true
CHECKOV_TIMEOUT_SECONDS=120

# ==============================================
# Kafka Configuration (for E2E tests)
# ==============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8085
KAFKA_ENABLED=false

# ==============================================
# Redis Configuration
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# ==============================================
# Vault Configuration
# ==============================================
VAULT_ENABLED=false
VAULT_ADDRESS=http://localhost:8200
VAULT_TOKEN=

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO
