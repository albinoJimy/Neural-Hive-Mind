# Service Configuration
SERVICE_NAME=analyst-agents
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
CORS_ORIGINS=*

# gRPC
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=analyst-agents-group
KAFKA_TOPICS_TELEMETRY=telemetry.aggregated
KAFKA_TOPICS_CONSENSUS=plans.consensus
KAFKA_TOPICS_EXECUTION=execution.results
KAFKA_TOPICS_PHEROMONES=pheromones.signals
KAFKA_TOPICS_INSIGHTS=insights.analyzed
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=neural_hive
MONGODB_COLLECTION_INSIGHTS=analyst_insights

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_INSIGHTS_TTL=3600

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=neural_hive

# Elasticsearch
ELASTICSEARCH_HOSTS=http://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Memory Layer API
MEMORY_LAYER_API_URL=http://memory-layer-api:8000

# Queen Agent gRPC
QUEEN_AGENT_GRPC_HOST=queen-agent
QUEEN_AGENT_GRPC_PORT=50051

# Service Registry
SERVICE_REGISTRY_GRPC_HOST=service-registry
SERVICE_REGISTRY_GRPC_PORT=50051

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=analyst-agents

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_WINDOW_SIZE_SECONDS=300
ANALYTICS_MIN_CONFIDENCE=0.7
ANALYTICS_ENABLE_SPARK=false

# Embeddings
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDINGS_DIMENSION=384
