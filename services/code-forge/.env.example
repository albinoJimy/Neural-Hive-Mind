# Service Configuration
SERVICE_NAME=code-forge
NAMESPACE=neural-hive-execution
CLUSTER=production

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka-broker-1:9092,kafka-broker-2:9092
KAFKA_TICKETS_TOPIC=execution.tickets
KAFKA_RESULTS_TOPIC=code-forge.results
KAFKA_CONSUMER_GROUP_ID=code-forge
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=code_forge
POSTGRES_USER=code_forge_user
POSTGRES_PASSWORD=changeme

# Database - MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DB=code_forge
MONGODB_USER=code_forge_user
MONGODB_PASSWORD=changeme

# Database - Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=changeme

# Service Registry
SERVICE_REGISTRY_HOST=service-registry
SERVICE_REGISTRY_PORT=50051
HEARTBEAT_INTERVAL_SECONDS=30

# Execution Ticket Service
EXECUTION_TICKET_SERVICE_URL=http://execution-ticket-service:8080

# Templates Configuration
TEMPLATES_GIT_REPO=https://github.com/neural-hive/code-templates.git
TEMPLATES_GIT_BRANCH=main
TEMPLATES_LOCAL_PATH=/app/templates
TEMPLATES_CACHE_TTL_SECONDS=3600

# External Tools - SonarQube
SONARQUBE_URL=http://sonarqube:9000
SONARQUBE_TOKEN=
SONARQUBE_ENABLED=true

# External Tools - Snyk
SNYK_TOKEN=
SNYK_ENABLED=true

# External Tools - Trivy
TRIVY_ENABLED=true
TRIVY_SEVERITY=CRITICAL,HIGH

# External Tools - GitLab
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=

# External Tools - Sigstore
SIGSTORE_FULCIO_URL=https://fulcio.sigstore.dev
SIGSTORE_REKOR_URL=https://rekor.sigstore.dev
SIGSTORE_ENABLED=true

# Artifact Storage
ARTIFACTS_S3_BUCKET=neural-hive-artifacts
ARTIFACTS_S3_REGION=us-east-1
ARTIFACTS_S3_ENDPOINT=
OCI_REGISTRY_URL=

# Pipeline Configuration
MAX_CONCURRENT_PIPELINES=3
PIPELINE_TIMEOUT_SECONDS=3600
AUTO_APPROVAL_THRESHOLD=0.9
MIN_QUALITY_SCORE=0.5
MIN_TEST_COVERAGE=0.8

# MCP Tool Catalog Integration
MCP_TOOL_CATALOG_HOST=mcp-tool-catalog
MCP_TOOL_CATALOG_PORT=8080

# LLM Integration (Optional - leave empty to disable)
LLM_PROVIDER=local
LLM_API_KEY=
LLM_MODEL=codellama:7b
LLM_BASE_URL=http://ollama:11434/api
LLM_ENABLED=false

# Analyst Agents Integration (Optional)
ANALYST_AGENTS_HOST=analyst-agents
ANALYST_AGENTS_PORT=8000

# Observability - OpenTelemetry
OTEL_EXPORTER_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=code-forge

# Observability - Prometheus
PROMETHEUS_PORT=9090

# Observability - HTTP/gRPC
HTTP_PORT=8080
GRPC_PORT=50051

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
