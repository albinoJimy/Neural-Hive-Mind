# Service Configuration
SERVICE_NAME=self-healing-engine
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=self-healing-engine
KAFKA_REMEDIATION_TOPIC=remediation-actions

# Service Registry
SERVICE_REGISTRY_HOST=service-registry
SERVICE_REGISTRY_PORT=50051
REGISTRATION_ENABLED=true
HEARTBEAT_INTERVAL_SECONDS=30

# MongoDB (Ledger)
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=neural_hive
MONGODB_REMEDIATION_COLLECTION=remediation_actions
MONGODB_PLAYBOOK_EXECUTIONS_COLLECTION=playbook_executions

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Kubernetes
KUBERNETES_IN_CLUSTER=true
KUBERNETES_NAMESPACE=neural-hive-resilience

# Playbooks
PLAYBOOKS_DIR=/app/playbooks
PLAYBOOKS_TIMEOUT_SECONDS=300
PLAYBOOKS_MAX_RETRIES=2
PLAYBOOKS_VALIDATION_ENABLED=true

# Execution
MAX_CONCURRENT_EXECUTIONS=5
EXECUTION_TIMEOUT_SECONDS=600
ROLLBACK_ON_FAILURE=true

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=self-healing-engine
